 <li><%= search_form_for @search do |f| %>
       <div class="field">
          <%= f.label :concern_cont, "Search contains" %>
          <%= f.text_field :concern_cont %>
       </div>
       <div class="actions"><%= f.submit "Search" %></div>
      <% end %></li>

<%= render 'pages/home' unless user_signed_in? %>

<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box panel panel-default">
      
      
      <div class="panel body">
        <h5>Location/Building: </h5>
        <h6><%= pin.locationBuilding %></h6>
        <h5>Concern: </h5>
        <h6><%= pin.concern %></h6>
         <%= link_to image_tag(pin.image.url(:medium)) , pin_path(pin) %> 
        <h5>by <%= pin.user.name if pin.user %></h5>
        <h5>on <%= pin.created_at.strftime("%b %d, %Y") %></h5>
        
        <% if pin.user == current_user %>
        <div class="actions center">
          <%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-primary btn-xs"%>
          <%= link_to 'Delete', pin, class: "btn btn-primary btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
        <% end %>
        
      </div>
    </div>
  <% end %>
</div>

<div class="center">
  <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>